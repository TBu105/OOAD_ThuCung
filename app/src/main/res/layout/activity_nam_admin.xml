<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NamAdminActivity"
    android:background="#DDDEEA">


    <Button
        android:id="@+id/btnBackAddSV"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:text="X"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="EDIT SERVICE"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgAdminAdd"
        android:layout_width="300px"
        android:layout_height="300px"
        android:src="@drawable/imgcat_1"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/edtNameAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"

            android:textStyle="italic"
            android:inputType="textEmailAddress"
            android:background="#FFFFFF"/>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/edtPriceAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Price"
            android:textStyle="italic"
            android:inputType="textEmailAddress"
            android:background="#FFFFFF"/>

        <EditText
            android:id="@+id/edtWeightAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Weight"
            android:textStyle="italic"
            android:inputType="textEmailAddress"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnAdminAdd"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="ADD"
        android:layout_gravity="center"
        android:textSize="15dp"/>
</LinearLayout>